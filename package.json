{
  "name": "imac-backend-turborepo",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --summarize",
    "dev": "turbo run dev --parallel",
    "prisma:migrate": "turbo run migrate --filter=@lumina/prisma",
    "prisma:generate": "turbo run generate --filter=@lumina/prisma",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:auth": "turbo run dev --filter=auth",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:treasury": "turbo run dev --filter=treasury"
  },
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "jose": "^6.1.1",
    "hono": "^4.9.8",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.3"
  }
}
